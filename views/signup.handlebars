<div class="card column mt-6" id="signup-card">
  <header class="card-header has-background-grey-lighter mt-3">
    <p class="card-header-title is-centered">
      Sign Up
    </p>
  </header>
  <form class="form signup-form card-content">
    <div class="form-group field">
      <label class="label">Username</label>
      <div class="control has-icons-left has-icons-right">
        <input
          class="input form-input"
          type="text"
          id="username"
          placeholder="johndoe47"
        />
        <span class="icon is-large is-left">
          <ion-icon size="large" name="mail"></ion-icon>
        </span>
      </div>
    </div>
    <div class="form-group field">
      <label class="label">Email</label>
      <div class="control has-icons-left has-icons-right">
        <input
          class="input form-input"
          type="text"
          id="email"
          placeholder="example@company.com"
        />
        <span class="icon is-large is-left">
          <ion-icon size="large" name="mail"></ion-icon>
        </span>
      </div>
    </div>
    <div class="form-group field">
      <label class="label">Password</label>
      <div class="control has-icons-left has-icons-right">
        <input
          class="input form-input"
          type="text"
          id="password"
          placeholder="************"
        />
        <span class="icon is-left">
          <ion-icon size="large" name="lock-closed"></ion-icon>
        </span>
      </div>
    </div>
    <div class="control">
      <button class="button has-background-grey-light">Submit</button>
    </div>
    <br />
    <p>
      Already a user?
      <a class="is-link" href="/login">Log In</a>
    </p>
  </form>
  <script src="/js/signup.js"></script>
</div>